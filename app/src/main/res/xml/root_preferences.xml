<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/syncing_header">

        <ListPreference
                app:defaultValue="zoteroapi"
                app:entries="@array/sync_options_entries"
                app:entryValues="@array/sync_options_values"
                app:key="sync_method"
                app:title="@string/sync_method"
                app:useSimpleSummaryProvider="true" />

        <ListPreference
                app:defaultValue="EXTERNAL_CACHE"
                app:entries="@array/attachment_storage_location_entries"
                app:entryValues="@array/attachment_storage_location_values"
                app:key="attachment_sync_location"
                app:title="@string/setting_sync_attachments_location"
                app:useSimpleSummaryProvider="true" />

        <SwitchPreference
                android:defaultValue="true"
                android:key="attachments_uploading_enabled"
                android:title="Offer to upload attachments" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/library_header">
        <SwitchPreference
            android:defaultValue="false"
            android:key="should_open_pdf_on_open"
            android:title="Default to opening Attachments" />

        <ListPreference
            app:defaultValue="TITLE"
            app:entries="@array/sort_options_entries"
            app:entryValues="@array/sort_options_values"
            app:key="sort_method"
            app:title="@string/sort_method_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Web DAV">

        <SwitchPreference
                android:defaultValue="false"
                android:key="use_webdav"
                android:title="Use webdav to access attachments" />
        <EditTextPreference
                android:dependency="use_webdav"
                android:enabled="false"
                android:key="webdav_address"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:summary=""
                android:title="Webdav Address"
                app:enabled="false" />
        <EditTextPreference
                android:dependency="use_webdav"
                android:enabled="false"
                android:key="webdav_username"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:summary="Username for webDAV. Leave empty for no username."
                android:title="WebDAV Username" />
        <EditTextPreference
                android:dependency="use_webdav"
                android:enabled="false"
                android:key="webdav_password"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:summary="Password for webDAV. Leave empty for no password."
                android:title="WebDAV Password" />
        <SwitchPreference
                android:defaultValue="false"
                android:dependency="use_webdav"
                android:key="use_webdav_shared_libraries"
                android:title="Use webdav for Group Libraries" />
    </PreferenceCategory>
</PreferenceScreen>
